<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_gravity="center_vertical" android:background="@color/connectivity_divider_color" android:layout_width="fill_parent" android:layout_height="0.5px" />
    <RelativeLayout android:orientation="horizontal" android:id="@id/RelativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RadioGroup android:id="@id/radioGroup1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentEnd="true">
            <RadioButton android:layout_gravity="end" android:id="@id/radio_button_flight_mode" android:padding="@dimen/radio_group_line_padding" android:layout_width="wrap_content" android:layout_height="@dimen/contact_cell_min_height" android:layout_marginStart="@dimen/radio_btn_left_margin" style="style/RadioButton" />
            <RadioButton android:layout_gravity="end" android:id="@id/radio_button_logs" android:padding="@dimen/radio_group_line_padding" android:layout_width="wrap_content" android:layout_height="@dimen/contact_cell_min_height" android:layout_marginStart="@dimen/radio_btn_left_margin" style="style/RadioButton" />
        </RadioGroup>
        <TextView android:textAppearance="@style/TitlePrefTextAppearance" android:gravity="center_vertical" android:layout_gravity="start|center" android:id="@id/txt_flight_mode" android:layout_width="fill_parent" android:layout_height="@dimen/contact_cell_min_height" android:text="@string/set_flight_mode_title" android:layout_alignParentTop="true" android:layout_marginStart="@dimen/preference_padding_side" android:layout_alignParentStart="true" />
        <TextView android:textAppearance="@style/TitlePrefTextAppearance" android:gravity="center_vertical" android:id="@id/txt_logs" android:layout_width="fill_parent" android:layout_height="@dimen/contact_cell_min_height" android:text="@string/enable_logs_title" android:layout_below="@id/txt_flight_mode" android:layout_marginStart="@dimen/preference_padding_side" android:layout_alignParentStart="true" />
    </RelativeLayout>
</FrameLayout>