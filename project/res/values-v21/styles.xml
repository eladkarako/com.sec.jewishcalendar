<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeCalendar" parent="@style/AppTheme">
        <item name="android:actionBarSize">@dimen/action_bar_default_height</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:alertDialogStyle">@style/AppTheme.AlertDialogTheme</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:textAppearanceLargePopupMenu">@style/AppTheme.MenuTextStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/AppTheme.MenuTextStyle</item>
        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.AlertDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textAppearance">@style/AlertDialogTextAppearance</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitleTextAppearance</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar" />
    <style name="AppTheme.NoActionBarDark" parent="@android:style/Theme.DeviceDefault.NoActionBar" />
    <style name="NotificationTitle" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TitlePrefTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Medium" />
    <style name="AlertDialogTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Medium" />
    <style name="AlertDialogTitleTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">22.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="CustomButton" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:buttonStyle">@style/Button</item>
    </style>
    <style name="NormalButton" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:buttonStyle">@style/Button</item>
    </style>
    <style name="AppTheme.MenuTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large" />
</resources>
